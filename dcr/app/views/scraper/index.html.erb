<h1>Job Scraper</h1>

<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <h2>Configure Scraper Settings</h2>
        </div>
        <div class="card-body">
          <%= form_with url: scraper_run_path, method: :post, local: true, class: "scraper-form" do |form| %>
            <div class="form-group mb-3">
              <%= form.label :portal, "Portal" %>
              <%= form.select :portal, [["Interamt", "interamt"]], { selected: "interamt" }, { class: "form-control", disabled: true } %>
              <small class="form-text text-muted">Currently only Interamt.de portal is supported</small>
            </div>

            <div class="form-group mb-3">
              <%= form.label :keyword, "Search Keyword" %>
              <%= form.text_field :keyword, class: "form-control", placeholder: "Enter search keyword (e.g. Informatiker)" %>
              <small class="form-text text-muted">Optional: Enter a keyword to filter job listings</small>
            </div>

            <div class="form-group mb-3">
              <%= form.label :max_jobs, "Maximum Jobs" %>
              <%= form.number_field :max_jobs, class: "form-control", value: 50, min: 1, max: 500 %>
              <small class="form-text text-muted">Maximum number of job descriptions to extract (1-500)</small>
            </div>

            <div class="form-group text-center mt-4">
              <%= form.submit "Start Scraping", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .container {
    margin-top: 30px;
  }
  .card {
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }
  .card-header {
    background-color: #f8f9fa;
  }
  .btn-primary {
    background-color: #007bff;
    border-color: #007bff;
    padding: 10px 30px;
  }
</style>
